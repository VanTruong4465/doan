@model Bonsal_Gardent.Areas.Admin.Data.AccCustomer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Change Password</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)

                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 TitleAdmin" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2 TitleAdmin" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <p class = "control-label col-md-2 TitleAdmin">Old Password</p>
                    <div class="col-md-10">
                        <input type="text" name="OldPass" class="form-control" required/>
                    </div>
                </div>

                <div class="form-group">
                    <p class="control-label col-md-2 TitleAdmin">New Password</p>
                    <div class="col-md-10">
                        <input type="text" name="NewPass" class="form-control" required />                    
                    </div>
                </div>
                <hr />
                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-success" />
                    @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-dark" })
                </div>
            </div>
        }
    </div>
</body>
</html>
