    string Name = ((Bonsal_Gardent.Areas.Admin.Data.AccCustomer)Session["CInfo"]).Name.ToString();
    string Email = ((Bonsal_Gardent.Areas.Admin.Data.AccCustomer)Session["CInfo"]).Email.ToString();
    string Phone = ((Bonsal_Gardent.Areas.Admin.Data.AccCustomer)Session["CInfo"]).Phone != null ? ((Bonsal_Gardent.Areas.Admin.Data.AccCustomer)Session["CInfo"]).Phone.ToString() : "";
    string Address = ((Bonsal_Gardent.Areas.Admin.Data.AccCustomer)Session["CInfo"]).Address.ToString();
