                        <div class="card-body text-center">
                            <img src="https://www.kibrispdr.org/data/583/gambar-user-png-33.png" alt="avatar"
                                 class="rounded-circle img-fluid" style="width: 150px;">
                            <h5 class="my-3">Setting:</h5>
                            <div class="form-group">
                                @Html.ActionLink("Modify", "ModifyInfo", null, new { @class = "btn btn-dark w-100" })
                            </div>
                            <div class="form-group">
                                <a href="~/Security/Login"><input type="button" value="Logout" class="btn btn-dark w-100" /></a>
                            </div>
                            <div class="d-flex justify-content-center mb-2">
                            </div>
                        </div>
                    </div>
